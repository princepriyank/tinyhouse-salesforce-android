<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="in.tinyhouse.salesforce">

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".Billing.BillComplete"></activity>
        <activity android:name=".Onboarding.SignUpActivity" />

        <activity
            android:name=".settings.SettingsActivity"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".profile.ProfileActivity"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".onboarding.LoginActivity"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".inventory.InventoryActivity"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".home.HomeActivity"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".billing.BillingActivity"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".splash.SplashActivity"
            tools:ignore="InnerclassSeparator">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>