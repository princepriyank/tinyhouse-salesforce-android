<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/root_loginlayout"
    tools:context=".onboarding.LoginActivity">
<androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">
    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:fontFamily="@font/ubuntu"
        android:text="Login"
        android:textColor="#E74672"
        android:textSize="18dp" />
</androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/salesforce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="#00E74672"
        android:fontFamily="@font/ubuntu_medium"
        android:text="salesforce"
        android:textColor="#FFFFFF"
        android:textSize="40dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/salesforce"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="83dp"
        android:layout_marginRight="30dp"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true"
        android:background="@drawable/text"
        android:fontFamily="@font/ubuntu"
        android:hint="Email"
        android:paddingLeft="18dp"
        android:paddingTop="12dp"
        android:paddingBottom="10dp"
        android:textColorHint="#E74672"
        android:textSize="16dp"
        android:paddingRight="4dp"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="49dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/text"
        android:fontFamily="@font/ubuntu"
        android:hint="Password"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        android:paddingLeft="18dp"
        android:paddingTop="12dp"
        android:paddingBottom="10dp"
        android:textColorHint="#E74672"
        android:textSize="16dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_alignParentRight="true"
        android:layout_marginTop="56dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/text"
        android:fontFamily="@font/ubuntu_medium"
        android:paddingLeft="28dp"
        android:paddingTop="12dp"
        android:paddingRight="28dp"
        android:paddingBottom="12dp"
        android:text="Sign in"
        android:textColor="#E74672"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tap_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:background="#E74672"
        android:fontFamily="@font/ubuntu_medium"
        android:text="tap here to sign up"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="12dp"
        android:clickable="true"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

</RelativeLayout>